# Production Environment Configuration for Echo MCP Client
# Copy this file to .env and update the values

# Application Settings
ENVIRONMENT=production
DEBUG=false
APP_NAME=Echo MCP Client
APP_VERSION=1.0.0
PORT=8000

# Server Connection Settings
SERVER_HOST=https://api.echo-mcp-server.qkiu.tech
MCP_SERVER_URL=https://api.echo-mcp-server.qkiu.tech/mcp

# JWT Settings
JWT_SECRET_KEY=your-32-char-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# OpenAI Settings
OPENAI_API_KEY=your-openai-api-key

# Logging
LOG_LEVEL=INFO

# CORS Settings
CORS_ORIGINS=["https://echo-mcp-client.qkiu.tech"]
CORS_ALLOW_CREDENTIALS=true

# Health Check
HEALTH_CHECK_PATH=/health
